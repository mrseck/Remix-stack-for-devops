{
  "name": "nobu-stack-template",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s 'build:*'",
    "build:remix": "remix build",
    "build:server": "esbuild --platform=node --format=cjs ./server.ts --outdir=build --bundle --external:fsevents",
    "dev": "run-p quirrel 'dev:*'",
    "dev:server": "cross-env NODE_ENV=development npm run build:server -- --watch",
    "dev:remix": "remix dev --manual -c \"node --require ./mocks ./build/server.js\"",
    "quirrel": "quirrel",
    "email:preview": "email dev -d ./app/emails -p 3030",
    "docker": "docker-compose up -d",
    "format": "prettier --write .",
    "format:repo": "yarn format && yarn lint:repo -- --fix",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:repo": "yarn lint -- --config ./.eslintrc.repo.js",
    "db:setup": "prisma migrate reset --force --skip-seed",
    "start": "cross-env NODE_ENV=production node ./build/server.js",
    "start:mocks": "cross-env NODE_ENV=production node --require ./mocks --require dotenv/config ./build/server.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e:dev": "cross-env PORT=3000 playwright test --ui --project=chromium",
    "test:e2e:prod": "run-p quirrel start:mocks",
    "pretest:e2e:run": "yarn build",
    "test:e2e:run": "cross-env PORT=3000 playwright test --project=chromium",
    "typecheck": "tsc && tsc -p tests",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build",
    "/postgres-data"
  ],
  "dependencies": {
    "@conform-to/react": "^0.9.1",
    "@conform-to/zod": "^0.9.1",
    "@highlight-run/remix": "^2.0.16",
    "@isaacs/express-prometheus-middleware": "^1.2.1",
    "@prisma/client": "5.8.1",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@react-email/components": "^0.0.14",
    "@react-email/render": "0.0.12",
    "@remix-run/css-bundle": "*",
    "@remix-run/express": "*",
    "@remix-run/node": "*",
    "@remix-run/react": "*",
    "@remix-run/server-runtime": "*",
    "argon2": "^0.31.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "daisyui": "^4.6.0",
    "express": "^4.18.2",
    "isbot": "^4.4.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.8",
    "otplib": "^12.0.1",
    "prom-client": "^15.1.0",
    "quirrel": "^1.14.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-email": "2.0.0",
    "remix-auth": "^3.6.0",
    "remix-auth-form": "^1.4.0",
    "remixicon-react": "^1.0.0",
    "source-map-support": "^0.5.21",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "thirty-two": "^1.0.2",
    "tiny-invariant": "^1.3.1",
    "zod": "^3.22.4"
